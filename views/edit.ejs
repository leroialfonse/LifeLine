<%- include('partials/header') %>

<div class="col">

    <label for="ul"><h2>Your Doctors</h2></label>
      <ul class="row list-unstyled">
        <% if (contacts.length === 0) { %>
          <p> No doctors in your contacts. Please add one to save their information.</p>
          <%} else { %>
           <% } %> 
          
        <% contacts.forEach( el => { %>  
          <li class="col-2  mt-5 doctors" data-id='<%el._id%>'>
            <% if (el._id == idContact ) { %>
            <form action="/edit/update/<%= el._id%>" method="POST">
              <label for="name">Change Name</label>
              <input type="text" name="name" value="<%= el.title %>">
              <label for="phone">Change Number</label>
              <input type="number" name = "phone" value = "<%= el.phone %>">
              <label for="address">Change Address</label>
              <input type="text" name="address" value="<%= el.address %>">
              <button btn-primary class="btn-primary fa fa-check" type="submit"></button>
              <a href="/">Cancel</a>
            </form>
          </li>
        <% } else { %>
                            <li>
                                <div><%= el.title %></div>
                                <div><%= el.address %></div>
                                <div><%= el.phone %></div>

                                <a href="/edit/<%= el._id %>">Edit</a>
                                <a href="/edit/remove/<%= el._id %>">Remove</a>
                            </li>
                            <% } %>
                    <% }) %>
                </ul>
        
            </section>

                </div>