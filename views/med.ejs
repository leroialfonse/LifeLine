<%- include('partials/header') -%>

<div class="container">
  <!-- <div class="row justify-content-center mt-5 medImgBlock" > -->
    <div class="col mt-5">
      <h2><%= med.title %></h2>
      <img class="img-fluid" src="<%= med.image%>" />
      <div class="row justify-content-between">
        <%if(med.user == user.id){ %>
        <form
          action="/med/deleteMed/<%= med.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
          <!-- edit button -->

        </form>
        <button class="btn btn-primary fa fa-edit col-9" type="submit"></button>
        <a href="/deleteMed/<%= med._id%>">delteRun</a>

        <!-- <a href="/editMed/remove/<%= this._id %>"><button class="btn btn-secondary fa fa-trash" type="submit"></button></a> -->
        <a href="/editMed/<%= med._id %>"> HERE !<button class="btn btn-primary fa fa-edit" type="submit"></button></a>
        <%}%>
      </div>
    </div>
    <div class="col-6 medInfo">
      <ul>
      <label for="dosage" class="form-label">Dosage: <%= med.dosage %></label>
      <label for="contact" class="form-label">Prescribing Physician: <%= med.contact %></label>
      <label for="comment" class="form-label">Notes: </label>
      <p><%= med.comments %></p></n>
      </ul>
    </div>

    
    <div class="mt-5">
      <h2>Add a note:</h2>
      <form action="/comment/createComment/<%=med._id%>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Add any notes about this medication, or questions you'd like to ask your doctor</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
       
        <button type="submit" class="btn btn-primary">Add note</button>
      </form>
    </div>
    <ul>
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-6 justify-content-between mt-5 messges">
         <%= comments[i].comment%>
        </li>
      <% } %>
    </ul>
