        <% if (meds.length === 0) { %>
          <p> No medications found. Please add one to save it.</p>
          <%} else { %>
           <% } %> 
        <% for(var i=0; i<meds.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/med/<%= meds[i]._id%>">
              <img class="img-fluid" src="<%= meds[i].image%>">
            </a>
          </li>
        <% } %>
        <button type="submit" class="btn btn-primary fa fa-trash" type="submit"></button>
        <button type="submit" class="btn btn-primary fa fa-edit" type="submit"></button>

        </ul>
